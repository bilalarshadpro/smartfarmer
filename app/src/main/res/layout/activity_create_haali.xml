<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateHaaliActivity"
    android:gravity="center"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:text="@string/create_haali"
        android:textColor="@color/main_color_green"
        android:textSize="35sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_haaliName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_shape"
        android:hint="@string/name_of_haali"

        />
    <EditText
        android:id="@+id/edit_haaliPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_shape"
        android:hint="@string/phone_of_haali"

        />
    <EditText
        android:id="@+id/edit_haaliAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_shape"
        android:hint="@string/address_of_haali"

        />
    <EditText
        android:id="@+id/edit_allocatedArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_shape"
        android:hint="@string/allocated_area"

        />

    <Button
        android:id="@+id/btn_createHaali"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_background"
        android:text="@string/create"
        android:textColor="@color/black" />







